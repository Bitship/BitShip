/**
 * Write your model definitions here
 */

namespace org.bitship

/* Enum and concept*/
enum SessionStatus {
  o CHECK_IN
  o CHECK_OUT 
  o ASSIGN
  o PENDING
  o DONE
}

concept Location {
  o Double lat
  o Double lon
}

enum ParticipantType {
    o PERSONAL
    o COMPANY
}

enum InspectionStatus {
  o OK
  o NOT_OK
}


/* Participants */
participant Customer identified by customerId {
  o String customerId
  o String firstName
  o String lastName
  o String phone
  o String address
}

participant Inspector identified by inspectorId {
  --> Warehouse warehouse  
  o String inspectorId
  o String name
}

participant ShipmentVehicle identified by shipmentVehicleId {
  --> Package[] packages  
  o String shipmentVehicleId
  o Location location
}

participant Warehouse identified by warehouseId {
  --> Package[] packages
  o String warehouseId
  o Location location
}

/* Assets */
asset Package identified by barcode {
  --> Customer sender
  o String barcode
  o Double weight
  o Location location
  o SessionStatus status
  o String receiverAddress
  o String receiverPhone
  o String receiverName   
}

/* Transactions */
transaction ShipmentTransfer {
  --> ShipmentVehicle vehicle
  --> Warehouse warehouse optional
  --> Package[] packages
  o SessionStatus status
}

transaction ShipmentVehicleMove {
  --> ShipmentVehicle vehicle
  o Location location 
}

transaction ShipmentDeliver {
  --> Package package
  o String signature
}

transaction ShipmentVehicleReport {  // CHECK_OUT
  --> Inspector inspector
  --> ShipmentVehicle ShipmentVehicle
  --> Package[] packages
  o InspectionStatus status
  o String note
  
}

transaction WarehouseReport { // CHECK_IN
  --> Inspector inspector
  --> Warehouse warehouse
  --> Package[] packages
  o InspectionStatus status
  o String note
 
}

transaction PackageHistoryQuery {
  o String packageId
}

event PackageHistoryQueryResults {
  o String[] results
}
